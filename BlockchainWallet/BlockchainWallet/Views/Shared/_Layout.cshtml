<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blockchain Dev Camp - Wallet - Online</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/loadingLogo.css" rel="stylesheet" />

</head>
<body>
    <script>
        var app = {};
        app.startLogo = function() {
            $('.loading-logo').show();
        }

        app.stopLogo = function() {
            $('.loading-logo').hide();
        }
    </script>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="https://github.com/blockchain-dev-camp">Blockchain Dev Camp - Online</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Address", "Index", "Address", new { }, new { @Class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Balance", nameof(BalanceController.Balance).RemoveControllerSuffix(), nameof(BalanceController).RemoveControllerSuffix(), null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Sent Transaction", "Index", "Transaction", new { }, new { @Class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Blockchain Wallet</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/tether/dist/js/tether.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/utils.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
